---
import Layout from "../layouts/Layout.astro";
import { Resume } from "../components/Resume";

import { Linkedin, GitHub, FileText } from "astro-feather-icons2";
---

<Layout>
  <div class="flex bg-base-200 justify-center pt-4 pb-4">
    <div class="w-10/12 h-44">
      <h1
        class="text-5xl w-fit font-bold bg-gradient-to-r from-red-400 to-blue-500 nline-block text-transparent bg-clip-text pb-2"
      >
        Resume
      </h1>
    </div>
  </div>
  <Resume>
    <GitHub slot="github" />
    <Linkedin slot="linkedin" />
    <FileText slot="filetext" />
  </Resume>
</Layout>
